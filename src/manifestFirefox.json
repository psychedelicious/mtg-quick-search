{
  "manifest_version": 2,

  "name": "MTG Quick Search",

  "version": "1.0.1",

  "description": "Adds context menu item & keyboard shortcut to search Scryfall for MTG cards.",

  "permissions": ["activeTab", "contextMenus", "https://api.scryfall.com/*"],

  "icons": {
    "48": "icons/icon.svg"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["mtgQuickSearch.css"],
      "js": ["browser-polyfill.min.js"]
    }
  ],

  "background": {
    "scripts": ["browser-polyfill.min.js", "background.js"]
  },

  "commands": {
    "find-card": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Search Scryfall for selected text"
    }
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "mtg-quick-search@psychedelicio.us"
    }
  },

  "developer": {
    "url": "https://github.com/psychedelicious/mtg-quick-search"
  }
}
