{
  "manifest_version": 2,

  "name": "MTG Quick Search",

  "version": "1.0.3",

  "description": "Adds context menu item & keyboard shortcut to search Scryfall for MTG cards.",

  "permissions": [
    "activeTab",
    "contextMenus",
    "https://api.scryfall.com/*",
    "storage"
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "96": "icon.svg"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["mtgQuickSearch.css"],
      "js": ["browser-polyfill.js"]
    }
  ],

  "background": {
    "scripts": ["browser-polyfill.js", "background.js"]
  },

  "commands": {
    "find-card": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Search Scryfall for selected text"
    }
  },

  "options_ui": {
    "page": "options.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "mtg-quick-search@psychedelicio.us"
    }
  },

  "developer": {
    "url": "https://github.com/psychedelicious/mtg-quick-search"
  }
}
